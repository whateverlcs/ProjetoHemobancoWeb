@model ProjetoHemobancoWeb.Models.Doacao

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Realizar</h1>

<h4>Doacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Doador" class="control-label">Nome do Doador</label>
                <input type="text" name="Doador" class="form-control" value="@ViewBag.NomeDoador" required />
                <span asp-validation-for="Doador.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TipoSangue" class="control-label">Tipo de Sangue</label>
                <input type="text" name="TipoSangue" class="form-control" value="@ViewBag.TipoSangue" />
                <span asp-validation-for="Sangue.TipoSangue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px;">
    <a class="btn btn-danger" asp-action="Index">← Voltar</a>
</div>

