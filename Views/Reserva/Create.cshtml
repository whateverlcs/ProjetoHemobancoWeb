@model ProjetoHemobancoWeb.Models.Reserva

@{
    ViewData["Title"] = "Realizar Reserva";
}

<h1>Realizar</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoSangue" class="control-label"></label>
                <input asp-for="TipoSangue" class="form-control" />
                <span asp-validation-for="TipoSangue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Funcionario" class="control-label">Funcionário</label>
                <input type="text" name="Funcionario" class="form-control" value="@ViewBag.NomeFunc" required />
                <span asp-validation-for="Funcionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agendar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px;">
    <a class="btn btn-danger" asp-action="Index">← Voltar</a>
</div>

