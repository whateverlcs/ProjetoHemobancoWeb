@model List<Estoque>

@{
    ViewData["Title"] = "Hemobanco";
}

<div class="div-estoque">
    <h4 class="cor">Situação do Estoque</h4>
    <span><b class="font-weight-lighter">Atualizado em </b> @ViewBag.Data às @ViewBag.Horario h</span>
</div>

<div id="produtos" class="row">
    @foreach (Estoque sanguesEstoque in Model)
    {
        <div class="col-sm-3 div-produtos">
            <img class="img-thumbnail" src="~/images/imagemblood.png" alt="@sanguesEstoque.Sangue.TipoSangue" style="width:120px; height:100px" /><br />
            <span>@sanguesEstoque.Sangue.TipoSangue</span><br />
            <span><b class="font-weight-bold">Quantidade(L): </b> @sanguesEstoque.QuantidadeLitros L</span><br />
        </div>
    }

</div>
<div class="div-doacoes">
    <h4 class="cor">Total de Doações</h4>
    <p><b>O Hemobanco já coletou </b>@ViewBag.QuantidadeRegistros bolsas de sangue.</p>
</div>

<div class="div-webservices">
    <h4 class="cor">Webservices disponibilizados</h4>
    <span><b class="font-weight-lighter">Listar Doações </b></span>
    <p><b>→ </b>https://localhost:44321/api/Doacao/Listar</p>

    <span><b class="font-weight-lighter">Procurar Doações por id </b></span>
    <p><b>→ </b>https://localhost:44321/api/Doacao/Buscar/1</p>

    <span><b class="font-weight-lighter">Listar Estoque </b></span>
    <p><b>→ </b>https://localhost:44321/api/Estoque/Listar</p>

    <span><b class="font-weight-lighter">Procurar Estoque por id </b></span>
    <p><b>→ </b>https://localhost:44321/api/Estoque/Buscar/2</p>
</div>